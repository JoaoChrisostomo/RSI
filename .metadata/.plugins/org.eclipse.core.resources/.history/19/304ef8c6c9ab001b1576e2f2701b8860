package pages;

import java.io.File;
import java.io.IOException;

import org.apache.commons.io.FileUtils;
import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class Metodos {

	WebDriver driver;

	public void abrirNavegador(String appUrl, String descricaoPasso) {
		System.setProperty("webdriver.chrome.driver", "C:\\Drivers\\chromedriver.exe");
		driver = new ChromeDriver();
		driver.get(appUrl);
		driver.manage().window().maximize();

	}

	public void clicar(By elemento) {
		driver.findElement(elemento).click();

	}

	public void esperar() throws InterruptedException {
		Thread.sleep(3000);
	}

	public void cadastrarConta(By escreverNomeUsuario, By escreverEmail, By escreverSenha, By escreverConfirmaSenha) {
		driver.findElement(escreverNomeUsuario).sendKeys("BenjaminSilva");
		driver.findElement(escreverEmail).sendKeys("Benjamin.si@gmail.com");
		driver.findElement(escreverSenha).sendKeys("Benjamin123");
		driver.findElement(escreverConfirmaSenha).sendKeys("Benjamin123");
	}

	public void cadastraDados(By escreverNome, By escreverSegundoNome, By escreverNumeroTelefone) {
		driver.findElement(escreverNome).sendKeys("Benjamin");
		driver.findElement(escreverSegundoNome).sendKeys("Silva");
		driver.findElement(escreverNumeroTelefone).sendKeys("11 968634561");
	}

	public void cadastraEndere√ßo(By escreverPais, By escreverCidade, By escreverRua, By escreverEstado, By escreverCep,
			By btnAceitarTermos, By btnConfirmaCadastro) {
		driver.findElement(escreverPais).sendKeys("Brazil");
		driver.findElement(escreverCidade).sendKeys("Manaus");
		driver.findElement(escreverRua).sendKeys("Rua Travessa dos Anjos 876 ");
		driver.findElement(escreverEstado).sendKeys("AM");
		driver.findElement(escreverCep).sendKeys("69080275");
		driver.findElement(btnAceitarTermos).click();
		driver.findElement(btnConfirmaCadastro).click();
	}

	public void screnShot(String nome) throws IOException {

		TakesScreenshot srcShot = ((TakesScreenshot) driver);
		File srcFile = srcShot.getScreenshotAs(OutputType.FILE);
		File destFile = new File("./src/evidencias/" + nome + ".png");
		FileUtils.copyFile(srcFile, destFile);

	}

	public void preencherLogin(By LoginUsername, By escreverSenha, By efetuarLogin) {
		driver.findElement(LoginUsername).sendKeys("BenjaminSilva");
		driver.findElement(escreverSenha).sendKeys("Benjamin123");
		driver.findElement(efetuarLogin).click();
	}

}
