package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class Metodos {

	WebDriver driver;

	public void abrirNavegador(String appUrl, String descricaoPasso) {
		System.setProperty("webdriver.chrome.driver", "C:\\Drivers\\chromedriver.exe");
		driver = new ChromeDriver();
		driver.get(appUrl);
		driver.manage().window().maximize();

	}

	public void clicar(By elemento) {
		driver.findElement(elemento).click();

	}

	public void esperar() throws InterruptedException {
		Thread.sleep(2000);
	}

	public void realizandoCadastroCompleto(By escreverNome, By escreverEmail, By escreverSenha, By escreverConfirmaSenha) {
		driver.findElement(escreverNome).sendKeys("Benjamin Silva");
		driver.findElement(escreverEmail).sendKeys("Benjamin.si@gmail.com");
		driver.findElement(escreverSenha).sendKeys("Benjamin123");
		driver.findElement(escreverConfirmaSenha).sendKeys("Benjamin123");
		driver.findElement(By.name("first_nameRegisterPage")).sendKeys("Benjamin");
		driver.findElement(By.name("last_nameRegisterPage")).sendKeys("Silva");
		driver.findElement(By.name("phone_numberRegisterPage")).sendKeys("11 968634561");
		driver.findElement(By.name("countryListboxRegisterPage")).sendKeys("Brazil");
		driver.findElement(By.name("cityRegisterPage")).sendKeys("Manaus");
		driver.findElement(By.name("addressRegisterPage")).sendKeys("Rua Travessa dos Anjos 876 ");
		driver.findElement(By.name("state_/_province_/_regionRegisterPage")).sendKeys("AM");
		driver.findElement(By.name("postal_codeRegisterPage")).sendKeys("69080275");
		driver.findElement(By.name("i_agree")).click();
	}
}
