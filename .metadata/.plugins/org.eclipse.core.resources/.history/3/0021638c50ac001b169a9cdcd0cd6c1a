package tests;

import java.io.IOException;

import elementos.ElementosWeb;
import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import pages.Metodos;

public class StepsLogin {

	Metodos metodos = new Metodos();
	ElementosWeb el = new ElementosWeb();

	@Given("que eu esteja em {string}")
	public void que_eu_esteja_em(String appUrl) throws InterruptedException {
		metodos.abrirNavegador(appUrl, "acessando o site");
		metodos.esperar();
	}

	@And("apertar no botao do utilizador")
	public void apertar_no_botao_do_utilizador() throws InterruptedException {
		metodos.clicar(el.getUser());
		metodos.esperar();
	}

	@When("preencher os campos de login")
	public void preencher_os_campos_de_login() {
		metodos.preencherLogin(el.getEscreverUsuarioLogin(), "BenjaminSilva", el.getEscreverSenhaLogin(), "Benjamin123",
				el.getEfetuarLogin());
	}

	@Then("entao efetuar login")
	public void entao_efetuar_login() throws InterruptedException, IOException {
		metodos.clicar(el.getEfetuarLogin());
		metodos.esperar();
		metodos.screnShot("Login");
	}
	@Given("que esteja usando o verbo post para cadastrar sem informar o nome")
	public void que_esteja_usando_o_verbo_post_para_cadastrar_sem_informar_o_nome() {
	   
	}

	@Then("retorna status code {int}")
	public void retorna_status_code(Integer int1) {
	    
	}

	@Then("retorna responseBody {string}")
	public void retorna_response_body(String string) {
	   
	}

	@Given("que esteja usando o verbo post para cadastrar um usuario cadastrado")
	public void que_esteja_usando_o_verbo_post_para_cadastrar_um_usuario_cadastrado() {
	    
	}

	@Then("retorna status code de erro {int}")
	public void retorna_status_code_de_erro(Integer int1) {
	    
	}
}
